[user]
	name = JGAntunes
	email = me@jgantunes.com
[core]
	editor = vim
[push]
	default = simple
[gpg]
  program = gpg

# aliases
[alias]
  stash-untracked = "!f() {    \
    git stash;               \
    git stash -u;            \
    git stash pop stash@{1}; \
  }; f"

# If the current branch has no upstream branch set, set it automatically
# i.e. git checkout -b <branch>; git push will automatically do git push --set-upstream origin <branch>
[push]
  autoSetupRemote = true

# Strategy to reconcile divergent branches
[pull]
	rebase = true
[init]
	defaultBranch = main
[gc]
	autoDetach = false
[credential]
	helper = store

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

# Private Golang modules rewrite
[url "git@github.com-work:clickhouse"]
	insteadOf = "https://github.com/clickhouse"

[includeIf "gitdir:~/workspace/github/"]
  path = .github.gitconfig
[includeIf "gitdir:~/workspace/work/"]
  path = .work.gitconfig

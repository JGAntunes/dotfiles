[core]
	editor = vim
[push]
	default = simple
[gpg]
  program = gpg

######

[includeIf "gitdir:~/workspace/github/"]
  path = .github.gitconfig

[includeIf "gitdir:~/workspace/netlify/"]
  path = .netlify.gitconfig

# aliases
[alias]
  stash-untracked = "!f() {    \
    git stash;               \
    git stash -u;            \
    git stash pop stash@{1}; \
  }; f"
